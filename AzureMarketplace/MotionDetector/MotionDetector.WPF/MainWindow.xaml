<Window x:Class="MotionDetector.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotionDetector.WPF"
        mc:Ignorable="d"
        Title="Motion Detector" Width="960" Height="600">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Button x:Name="LoadVideo" Width="120" Height="40" Margin="10,10,10,0">Load video</Button>
                <Button x:Name="ProcessVideo" Width="120" Height="40" Margin="10,10,10,0">Process video</Button>
            </StackPanel>
            <StackPanel>
                <MediaElement x:Name="SecurityVideo" Width="640" Height="360" VerticalAlignment="Top" Margin="10" />
                <TextBlock x:Name="MotionStatus" Width="640" TextAlignment="Center" Margin="10">n/a</TextBlock>
            </StackPanel>
            <ListBox x:Name="MotionEventList" Width="120" Height="auto" VerticalAlignment="Top" Margin="10">
                
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
